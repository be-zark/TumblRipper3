<Window
	x:Class="TumblRipper.BugReporter.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:TumblRipper.BugReporter"
	Title="BugReport"
	Height="591.949"
	Width="525">
	<DockPanel
		Margin="10">
		<StackPanel
			DockPanel.Dock="Top">
			<TextBlock>The application encountered an error. Please help us improve by sending an error report</TextBlock>
			<TextBlock
				FontWeight="Bold"
				FontSize="14">Describe what you were doing :</TextBlock>
			<TextBox
				Name="ErrorDescription"
				AcceptsReturn="True"
				AcceptsTab="True"
				Height="200"
				Margin="10" />
			<TextBox
				Name="ErrorLog"
				Height="200"
				IsReadOnly="True"
				Margin="10" />
		</StackPanel>
		<StackPanel
			Orientation="Horizontal"
			Height="50">
			<Button
				Content="Send Report"
				Margin="10"
				Width="100"
				Click="btnSend" />
			<Button
				Content="Cancel"
				Margin="10"
				Width="100"
				Click="Button_Click" />
		</StackPanel>
	</DockPanel>
</Window>
